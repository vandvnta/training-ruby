<h1 class="text-center mb-4">Đăng nhập Admin</h1>

<% if flash[:alert] %>
    <div class="alert alert-danger">
        <%= flash[:alert] %>
    </div>
<% end %>

<div class="row justify-content-center">
    <div class="col-md-4">
        <%= form_with url: admin_login_path, local: true do |f| %>
            <div class="mb-3">
                <%= f.label :email, class: "form-label" %>
                <%= f.email_field :email, class: "form-control", autofocus: true %>
            </div>

            <div class="mb-3">
                <%= f.label :password, class: "form-label" %>
                <%= f.password_field :password, class: "form-control" %>
            </div>

            <div class="mb-3 text-end">
                <%= link_to "Quên mật khẩu?", new_admin_password_path, class: "text-decoration-none" %>
            </div>

            <%= f.submit "Đăng nhập", class: "btn btn-primary w-100" %>
        <% end %>
    </div>
</div>
