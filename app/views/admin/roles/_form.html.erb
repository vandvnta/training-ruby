<div class="card shadow-sm mb-4" style="max-width: 600px; margin: 30px;">
    <div class="card-header">
        <h3><%= role.new_record? ? "Create Role" : "Edit Role" %></h3>
    </div>

    <div class="card-body">
        <%= form_with(model: [:admin, role], local: true) do |f| %>
        <div class="mb-3">
            <%= f.label :name, class: "form-label" %>
            <%= f.text_field :name, class: "form-control", placeholder: "Enter role name" %>
            <% if @role.errors[:name].any? %>
                <div class="text-danger"><%= @role.errors.full_messages_for(:name).join(', ') %></div>
            <% end %>
        </div>

        <div class="mb-3">
            <%= f.label :description, class: "form-label" %>
            <%= f.text_area :description, class: "form-control", rows: 3, placeholder: "Enter description" %>
        </div>

        <div>
            <%= link_to admin_roles_path, class: "btn btn-secondary" do %>
                <i class="fas fa-arrow-left me-1"></i> Back
            <% end %>

            <%= f.submit role.new_record? ? "Create" : "Update", class: "btn btn-primary" %>
        </div>
        <% end %>
    </div>
</div>
