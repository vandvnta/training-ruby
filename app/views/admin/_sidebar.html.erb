<div class="admin-sidebar">
    <h2>Admin Panel</h2>
    <nav>
        <ul>
            <li>
                <%= link_to "Dashboard", admin_dashboard_path,
                class: ("active" if controller_path == "admin/dashboard") %>
            </li>
            <li>
                <%= link_to "Teams", admin_teams_path,
                class: ("active" if controller_path == "admin/teams") %>
            </li>
            <li>
                <%= link_to "Roles", admin_roles_path,
                class: ("active" if controller_path == "admin/roles") %>
            </li>
            <li>
                <%= link_to "Users", admin_users_path,
                class: ("active" if controller_path == "admin/users") %>
            </li>
        </ul>
    </nav>
</div>

<div class="modal fade" id="logoutModal" tabindex="-1" aria-labelledby="logoutModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="logoutModalLabel">
                <i class="fas fa-sign-out-alt me-2"></i> Confirm logout
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Đóng"></button>
            </div>

            <div class="modal-body text-center">
                <p class="fs-5 text-secondary mb-0">Are you sure you want to log out?</p>
            </div>

            <div class="modal-footer justify-content-center">
                <%= button_to "Log out", admin_logout_path, method: :delete, class: "btn btn-danger px-4" %>
                <button type="button" class="btn btn-secondary px-4" data-bs-dismiss="modal">Hủy</button>
            </div>
        </div>
    </div>
</div>
