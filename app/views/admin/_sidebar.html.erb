<div class="admin-sidebar">
    <h2>Admin Panel</h2>
    <nav>
        <ul>
            <li>
                <%= link_to "Dashboard", admin_dashboard_path,
                class: ("active" if controller_path == "admin/dashboard") %>
            </li>
            <li>
                <%= link_to "Teams", admin_teams_path,
                class: ("active" if controller_path == "admin/teams") %>
            </li>
            <li>
                <%= link_to "Roles", admin_roles_path,
                class: ("active" if controller_path == "admin/roles") %>
            </li>
            <li>
                <%= link_to "Users", admin_users_path,
                class: ("active" if controller_path == "admin/users") %>
            </li>
        </ul>

        <hr>

        <ul>
            <li>
                <a href="#" id="logout-button">Logout</a>
            </li>
        </ul>
    </nav>
</div>

<!-- Modal custom -->
<div id="logout-modal" class="modal">
  <div class="modal-content">
    <span class="close">&times;</span>
    <h3>Xác nhận đăng xuất</h3>
    <p>Bạn có chắc chắn muốn đăng xuất không?</p>
    <div class="modal-actions">
      <%= button_to "Đăng xuất", admin_logout_path, method: :delete, class: "btn btn-logout" %>
      <button id="cancel-logout" class="btn btn-cancel">Hủy</button>
    </div>
  </div>
</div>
