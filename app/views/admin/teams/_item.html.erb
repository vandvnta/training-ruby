<tr>
    <td><%= team.name %></td>
    <td><%= team.description %></td>
    <td><%= team.created_at.strftime("%Y-%m-%d") %></td>
    <td>
        <div class="td-action">
            <%= link_to [:admin, team], class: "btn btn-sm btn-info flex-fill text-while" do %>
                <i class="fa fa-eye"></i>
            <% end %>
            <%= link_to edit_admin_team_path(team), class: "btn btn-sm btn-primary flex-fill text-while" do %>
                <i class="fas fa-edit"></i>
            <% end %>
            <%= button_to [:admin, team],
                method: :delete,
                data: { turbo_confirm: "Are you sure you want to delete this team?" },
                class: "btn btn-sm btn-danger flex-fill text-white" do %>
                <i class="fas fa-trash"></i>
            <% end %>
        </div>
    </td>
</tr>