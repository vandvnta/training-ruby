<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f8f9fa;
    }
    h2 {
        margin: 0;
    }
    .container {
        width: 95%;
        max-width: 1200px;
        margin: 20px auto;
    }

    /* --- Cards --- */
    .stats {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        margin-bottom: 30px;
    }
    .card {
        flex: 1 1 200px;
        background-color: white;
        padding: 20px;
        border-radius: 8px;
        border-left: 5px solid #007bff;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        text-align: center;
    }
    .card .number {
        font-size: 2em;
        font-weight: bold;
        margin: 10px 0;
        color: #007bff;
    }
    </style>
</head>
<body>
<div class="container">
    <h1>Dashboard</h1>

    <!-- Stat Cards -->
    <div class="stats">
        <div class="card">
            <h2>Users</h2>
            <div class="number"><%= @total_users %></div>
        </div>
        <div class="card">
            <h2>Teams</h2>
            <div class="number"><%= @total_teams %></div>
        </div>
        <div class="card">
            <h2>Roles</h2>
            <div class="number"><%= @total_roles %></div>
        </div>
    </div>
</body>
</html>
