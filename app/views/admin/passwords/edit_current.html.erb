<div class="card shadow-sm" style="width: 400px; margin: 20px;">
    <div class="card-header bg-primary text-white text-center">
        <h3>Change Password</h3>
    </div>

    <div class="card-body">
        <% if flash[:alert] %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%= flash[:alert] %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% elsif flash[:notice] %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%= flash[:notice] %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% end %>
        <%= form_with model: @user, url: update_current_admin_passwords_path, local: true do |f| %>
            <div class="mb-3">
                <%= f.label :current_password, "Current Password", class: "form-label" %>
                <%= f.password_field :current_password, class: "form-control", name: "user[current_password]" %>
            </div>

            <div class="mb-3">
                <%= f.label :password, "New Password", class: "form-label" %>
                <%= f.password_field :password, class: "form-control" %>
            </div>

            <div class="mb-3">
                <%= f.label :password_confirmation, "Confirm New Password", class: "form-label" %>
                <%= f.password_field :password_confirmation, class: "form-control" %>
            </div>

            <%= f.submit "Update Password", class: "btn btn-primary w-100" %>
        <% end %>
    </div>
</div>
