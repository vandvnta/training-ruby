<div class="card shadow-sm mx-auto" style="width: 400px;">
    <div class="card-header bg-primary text-white text-center">
        <h4>Forgot password</h4>
    </div>
    <div class="card-body">
        <% if flash[:alert] %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%= flash[:alert] %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% elsif flash[:notice] %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%= flash[:notice] %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% end %>
        <%= form_with url: admin_passwords_path, method: :post, local: true do |f| %>
            <div class="mb-3">
                <%= f.label :email, "Email" %>
                <%= f.email_field :email, class: "form-control", required: true %>
            </div>

            <%= f.submit "Send reset link", class: "btn btn-primary w-100" %>
            <% end %>
        <div class="text-center mt-3">
            <%= link_to "â† Back to login", admin_login_path %>
        </div>
    </div>
</div>
