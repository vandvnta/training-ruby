<div class="card shadow-sm mx-auto" style="max-width: 400px;">
  <div class="card-header bg-primary text-white text-center">
    <h4>Quên mật khẩu</h4>
  </div>
  <div class="card-body">
    <%= form_with url: admin_passwords_path, local: true do |f| %>
      <div class="mb-3">
        <%= label_tag :email, "Email", class: "form-label" %>
        <%= email_field_tag :email, params[:email], class: "form-control", required: true %>
      </div>
      <div class="d-grid">
        <%= f.submit "Gửi liên kết đặt lại", class: "btn btn-primary" %>
      </div>
    <% end %>

    <div class="text-center mt-3">
      <%= link_to "← Quay lại đăng nhập", admin_login_path %>
    </div>
  </div>
</div>
